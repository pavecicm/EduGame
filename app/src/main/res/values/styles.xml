<resources>

    <style name="PrimaryButton">
        <item name="android:background">@drawable/bg_primary_btn</item>
        <item name="android:paddingTop">@dimen/spacing_2x</item>
        <item name="android:paddingBottom">@dimen/spacing_2x</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_marginStart">@dimen/spacing_2x</item>
        <item name="android:layout_marginEnd">@dimen/spacing_2x</item>
        <item name="android:layout_marginBottom">@dimen/spacing_2x</item>
        <item name="android:layout_marginTop">@dimen/spacing_2x</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Heading1Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NumbersView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Regular1Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="GameHeadingText" parent="Heading1Text">
        <item name="android:padding">@dimen/spacing_2x</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NewWordText">
        <item name="android:textSize">45sp</item>
        <item name="android:padding">@dimen/spacing_1x</item>
        <item name="android:paddingBottom">@dimen/spacing_3.5x</item>
        <item name="android:layout_marginBottom">@dimen/spacing_4x</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NewWordLayout">
        <item name="android:textSize">32sp</item>
        <item name="android:padding">@dimen/spacing_1.25x</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_new_letter_btn</item>
    </style>

    <style name="NewOperationLayout">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/spacing_1.25x</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LetterView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">@dimen/spacing_2x</item>
        <item name="android:background">@drawable/bg_primary_btn</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DeleteButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/bg_delete_btn</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SaveButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/bg_save_btn</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WantedNumber">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">@dimen/spacing_1x</item>
    </style>

    <style name="MathSign">
        <item name="android:textSize">28sp</item>
        <item name="android:background">@color/indigo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/spacing_1x</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EnterEditText">
        <item name="android:layout_marginStart">@dimen/spacing_2x</item>
        <item name="android:layout_marginEnd">@dimen/spacing_2x</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">@dimen/spacing_1x</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SimpleLink">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/spacing_2x</item>
    </style>

    <style name="OpponentRankView">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/spacing_1.25x</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="BaseTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>

    <style name="LoadingDialog">
        <item name="android:background">@color/white</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>

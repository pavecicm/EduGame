<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_2.5x"
        android:src="@drawable/ic_arrow_left_navigation"/>

    <TextView
        android:id="@+id/navigationTitle"
        style="@style/GameHeadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/numbers"
        app:layout_constraintLeft_toRightOf="@id/backBtn"
        app:layout_constraintRight_toLeftOf="@id/nextBtn"/>

    <TextView
        android:id="@+id/nextBtn"
        style="@style/SaveButton"
        android:layout_width="@dimen/spacing_6x"
        android:layout_height="@dimen/spacing_6x"
        android:layout_margin="@dimen/spacing_1.5x"
        android:gravity="center"
        android:text="@string/save_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>